<h1>New Order for <%= @item.name %></h1>



<%= form_for @order, url: food_item_orders_path(food_item_id: @item.id) do |f| %>

<% if @order.errors.present? %>
<div class="alert alert-error"> <%= @order.errors.full_messages.to_sentence %></div>
<% end %>


<div class="form-group form-1">
    <%= f.label :quantity %>
    <%= f.number_field :quantity, class: "form-control" %>
</div>
<div class="form-group form-2">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
</div>
<div class="form-group form-3">
    <%= f.label :surname %>
    <%= f.text_field :surname, class: "form-control" %>
</div>
<div class="form-group form-4">
    <%= f.label :phone %>
    <%= f.number_field :phone, class: "form-control" %>
</div>
<div class="form-group form-5">
    <%= f.label :address %>
    <%= f.text_field :address, class: "form-control" %>
</div>

 



<%= f.submit nil, class: "btn btn-primary" %>
<% end %>