<p id="notice"><%= notice %></p>


<div id='show_page'>
<p id='show_image'>
  <%=image_tag @food_item.image_url %>
</p>
<p>
  <strong>Name:</strong>
  <%= @food_item.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @food_item.description %> 
</p>

<p>
  <strong>Price:</strong>
  <%= @food_item.price %> VND
</p>

<p>
  <strong>Section:</strong>
  <%= @food_item.section.name %>
</p>
</div>
<span> <%= link_to new_order_path(food_item_id: @food_item.id) do %>   <!-- to have the icon as the link -->
      <i class="fa fa-cart-plus"></i>
       <% end %>
</span>


